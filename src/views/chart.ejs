<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BTC/USDT Chart</title>

    <!-- Osadzenie biblioteki TradingView -->
    <script type="text/javascript" src="/charting_library/charting_library.js"></script>

    <!-- Opcjonalny styl CSS -->
    <style>
        #chart_container {
            width: 100%;
            height: 600px;
        }
    </style>
</head>
<body>

    <div id="chart_container"></div>

    <script type="text/javascript">
        // Ustawienia TradingView Charting Library
        function createChart() {
            const widget = new TradingView.widget({
                // Ścieżka do plików Charting Library
                library_path: "/charting_library/",

                // Konfiguracja wykresu
                symbol: "BINANCE:BTCUSDT",  // BTC/USDT na Binance
                interval: "D",  // Dzienny interwał
                container_id: "chart_container",
                datafeed: new Datafeeds.UDFCompatibleDatafeed("https://demo_feed.tradingview.com"),  // Źródło danych demo
                library_path: "/charting_library/",
                locale: "en",
                disabled_features: ["use_localstorage_for_settings"],
                enabled_features: ["study_templates"],
                charts_storage_url: 'https://saveload.tradingview.com',
                charts_storage_api_version: "1.1",
                client_id: 'tradingview.com',
                user_id: 'public_user_id',
                fullscreen: false,
                autosize: true,
                theme: "light"
            });
        }

        // Inicjalizacja wykresu po załadowaniu strony
        document.addEventListener('DOMContentLoaded', function () {
            createChart();
        });
    </script>

</body>
</html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <table>
                    <tbody style="font-size: 10px;">
                        <tr>
                            <th>Balance</th>
                            <td class="">0.00004589</td>
                        </tr>
                        <tr>
                            <th>Equity</th>
                            <td>0.00012453</td>
                        </tr>
                        <tr>
                            <th>Gross P/L</th>
                            <td>0.00017042</td>
                        </tr>
                        <tr>
                            <th>Realized total P/L</th>
                            <td>0.00024523</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col">
                <table>
                    <tbody style="font-size: 10px;">
                        <tr>
                            <th>Used Margin:</th>
                            <td class="">0.00001000</td>
                        </tr>
                        <tr>
                            <th>Usable Margin: </th>
                            <td>0.00011453</td>
                        </tr>
                        <tr>
                            <th>Usable Margin, %:</th>
                            <td>99.98</td>
                        </tr>
                        <tr>
                            <th>Equity MC Level, %:</th>
                            <td>102.2</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col">
                <table>
                    <tbody style="font-size: 10px;">
                        <tr>
                            <th>Deposit</th>
                            <td class="">0.00069542</td>
                        </tr>
                        <tr>
                            <th>Withdrawal:</th>
                            <td>0.00000000</td>
                        </tr>
                        <tr>
                            <th>Commissions and Financing:</th>
                            <td>-0.00007531</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col">
                <table>
                    <tbody style="font-size: 10px;">
                        <tr>
                            <th>Adjustment:</th>
                            <td class="">0.00000000</td>
                        </tr>
                        <tr>
                            <th>Bonus:</th>
                            <td>0.00000000</td>
                        </tr>
                        <tr>
                            <th>Net: </th>
                            <td>-0.00345678</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div>
                <canvas id="myChart"></canvas>
            </div>
              
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            
            <script>
                const ctx = document.getElementById('myChart').getContext('2d');
                const data = JSON.parse(`<%- chartData %>`);

                console.log("data: ", data)
                // Przekształcenie danych w odpowiedni format
                const labels = data.map(point => point.x);
                const values = data.map(point => point.y);
        
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Profit/Loss Data',
                            data: values,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1,
                            fill: false
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        },
                        // plugins: {
                        //     legend: {
                        //         display: false // Wyłącza wyświetlanie legendy
                        //     }
                        // }
                    }
                });
            </script>
              
        </div>
    </div>
<!-- <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script> -->
</body>
</html>